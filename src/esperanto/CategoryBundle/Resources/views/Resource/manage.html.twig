{% use 'esperantoAdminBundle::block.html.twig' %}

<div class="container form-container small-dialog ">
    {% block content %}
        <form method="POST" action="{{ path(admin.config.getParameter('manage_route'), { name: data.name }) }}">
            <div class="pl2em mb2em">
                {{ form_widget(form) }}
            </div>

            <div class="row pl2em">
                <button class="btn  span2 close"><i class="icon-remove"></i> {{ 'label.cancel'|trans }}</button>
                <button class="btn span2 save" type="button"><i class="icon-ok"></i> {{ 'label.save'|trans }}</button>
            </div>
        </form>
    {% endblock %}
</div>