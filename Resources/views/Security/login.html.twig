{% extends "esperantoAdminBundle::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <div id="loginBox">
        {% if error %}
            <div class="offset2 span4 error" id="overlayMessage" style="display: block;">
                <div>{{ 'error.login'|trans }}</div>
            </div>
        {% endif %}

        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <input type="hidden" id="remember_me" name="_remember_me" value="on">
            <div class="row mb1 label-container">
                <label class="span2 text-right">{{ 'security.login.username'|trans }}</label>
                <div class="span4">
                    <div class="inputContainer">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>

                </div>
            </div>
            <div class="row mb1 label-container">
                <label class="span2 text-right">{{ 'security.login.password'|trans }}</label>
                <div class="span4">
                    <div class="inputContainer">
                       <input type="password" id="password" name="_password" required="required" />
                    </div>
                </div>
            </div>
            <button class="btn span2 offset2 span2 loginButton" type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
        </form>
    </div>
{% endblock body %}